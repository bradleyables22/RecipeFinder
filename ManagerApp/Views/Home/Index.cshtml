@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="row">
        <div class="col-9"></div>
        <div class="col-3 text-success">
            <div class="alert alert-danger error-alert">@ViewBag.ErrorMessage</div>
        </div>
    </div>
    
}
@if (ViewBag.SuccessMessage != null)
{
    <div class="row">
        <div class="col-9"></div>
        <div class="col-3 text-center">
            <div class="alert alert-success fade-alert">@ViewBag.SuccessMessage</div>
        </div>
    </div>
}
<div class="container-fluid mt-5 text-center">
    <div class="btn btn-success mb-3">Create</div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Published On</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Expense</th>
                <th scope="col">Category</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.Recipes.OrderByDescending(x => x.PublishedAt))
            {
                <tr>
                    <td>@recipe.PublishedAt.ToShortDateString()</td>
                    <td>@recipe.Title</td>
                    <td>@recipe.Description</td>
                    <td> @recipe.ExpenseRating</td>
                    <td>@recipe.CategoryName</td>
                    <td>
                        <div class="row">
                            <div class="col-6 text-end">
                                <form method="get" action="@Url.Action("Edit", "Home", new { id = recipe.RecipeID.ToString() })">
                                    <button type="submit" class="btn btn-sm btn-secondary">Edit</button>
                                </form>
                            </div>
                            <div class="col-6 text-start">
                                <form method="post" action="@Url.Action("Index", new { id = Guid.Empty.ToString()})">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-info btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
